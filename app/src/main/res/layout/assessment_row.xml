<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/assessmentHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow_box"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/productLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/campaignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/productLogo"
        android:paddingLeft="15sp"/>

    <TextView
        android:id="@+id/campaignEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#a90e0e"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/productLogo"
        android:layout_below="@id/campaignName"
        android:paddingLeft="15sp"/>

    <TextView
        android:id="@+id/assessee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#175bb3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/productLogo"
        android:layout_below="@id/campaignEndDate"
        android:paddingLeft="15sp"/>

</RelativeLayout>